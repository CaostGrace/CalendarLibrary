<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daysContainer"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6e9fff"
        android:gravity="center"
        android:text="Mon"
        android:id="@+id/month_of_week_one"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6e9fff"
        android:gravity="center"
        android:text="Tue"
        android:id="@+id/month_of_week_two"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6e9fff"
        android:gravity="center"
        android:text="Wed"
        android:id="@+id/month_of_week_three"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6e9fff"
        android:gravity="center"
        android:id="@+id/month_of_week_four"
        android:text="Thu"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6e9fff"
        android:gravity="center"
        android:id="@+id/month_of_week_five"
        android:text="Fri"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6e9fff"
        android:gravity="center"
        android:id="@+id/month_of_week_six"
        android:text="Sat"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6e9fff"
        android:gravity="center"
        android:id="@+id/month_of_week_seven"
        android:text="Sun"
        android:textColor="@android:color/white" />
</LinearLayout>
